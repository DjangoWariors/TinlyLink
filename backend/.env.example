# TinlyLink Environment Configuration
# Copy this file to .env and update values

# Django Core
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=tinlylink.com,www.tinlylink.com,api.tinlylink.com

# Database
DATABASE_URL=postgres://user:password@localhost:5432/tinlylink

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=tinlylink-assets
AWS_S3_REGION_NAME=us-east-1

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_BUSINESS_PRICE_ID=price_xxx

# SendGrid
SENDGRID_API_KEY=SG.xxx
DEFAULT_FROM_EMAIL=noreply@tinlylink.com

# GeoIP
GEOIP_PATH=/var/lib/geoip

# Sentry
SENTRY_DSN=https://xxx@sentry.io/xxx

# Google AdSense
ADSENSE_CLIENT_ID=ca-pub-xxx
ADSENSE_SLOT_ID=xxx

# Application
DEFAULT_SHORT_DOMAIN=lnk.to
FRONTEND_URL=https://tinlylink.com

# CORS
CORS_ALLOWED_ORIGINS=https://tinlylink.com,https://www.tinlylink.com,https://app.tinlylink.com
