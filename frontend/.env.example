# =============================================================================
# TINLYLINK FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local for local development
# Copy to .env.production for production builds
# =============================================================================

# API Configuration
VITE_API_URL=/api/v1
VITE_APP_URL=http://localhost:3000

# App Settings
VITE_APP_NAME=TinlyLink
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_SHORT_DOMAIN=lnk.to

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_QR_CODES=true
VITE_ENABLE_CAMPAIGNS=true
VITE_ENABLE_CUSTOM_DOMAINS=true
VITE_ENABLE_API_KEYS=true

# Stripe (for client-side checkout)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Google Analytics (optional)
VITE_GA_TRACKING_ID=

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=

VITE_GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

